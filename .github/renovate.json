{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"extends": [
		"local>TWiStErRob/renovate-config"
	],
	"ignorePaths": [
		"graph/**",
		"**/src/test/resources/**"
	],
	"packageRules": [
		{
			"description": "Disable updating AGP compatibility dependencies, they have a specific version, and will break the build. Allow patches.",
			"matchPackageNames": [
				"com.android.tools.build:gradle"
			],
			"matchPaths": [
				"gradle/agp.versions.toml"
			],
			"matchUpdateTypes": ["major", "minor"],
			"enabled": false
		},
		{
			"description": "Disable updating AGP CI matrix, they use the latest patch of a specific minor.",
			"matchPackageNames": [
				"com.android.tools.build:gradle"
			],
			"matchPaths": [
				".github/workflows/CI.yml"
			],
			"matchUpdateTypes": ["major", "minor"],
			"enabled": false
		},
		{
			"description": "Disable updating Gradle CI matrix, they use the latest patch of a specific minor.",
			"matchPackageNames": [
				"gradle"
			],
			"matchPaths": [
				".github/workflows/CI.yml"
			],
			"matchUpdateTypes": ["major", "minor"],
			"enabled": false
		},
		{
			"description": "Re-enable updating Gradle CI matrix for latest version. It's not working, see https://github.com/renovatebot/renovate/issues/21407",
			"matchPackageNames": [
				"gradle"
			],
			"matchPaths": [
				".github/workflows/CI.yml"
			],
			"matchCurrentVersion": ">=8.0",
			"matchUpdateTypes": ["minor"],
			"enabled": true
		},
		{
			"description": "Disable updating Gradle, they use the latest patch of a specific minor.",
			"matchPackageNames": [
				"gradle"
			],
			"matchPaths": [
				"test/src/main/resources/net/twisterrob/gradle/test/nagging.init.gradle.kts",
				"plugin/base/src/testFixtures/resources/net/twisterrob/gradle/test/kotlin-plugin_app/build.gradle",
				"quality/src/test/kotlin/net/twisterrob/gradle/quality/tasks/VersionsTaskTest.kt"
			],
			"matchUpdateTypes": ["major", "minor"],
			"enabled": false
		},
		{
			"description": "Re-enable updating Gradle for latest version. It's not working, see https://github.com/renovatebot/renovate/issues/21407",
			"matchPackageNames": [
				"gradle"
			],
			"matchPaths": [
				"test/src/main/resources/net/twisterrob/gradle/test/nagging.init.gradle.kts",
				"plugin/base/src/testFixtures/resources/net/twisterrob/gradle/test/kotlin-plugin_app/build.gradle",
				"quality/src/test/kotlin/net/twisterrob/gradle/quality/tasks/VersionsTaskTest.kt"
			],
			"matchCurrentVersion": ">=8.0",
			"matchUpdateTypes": ["minor"],
			"enabled": true
		},
		{
			"description": "Disable updating plugins in example projects, they're part of the release process.",
			"matchPackageNames": [
				"net.twisterrob.gradle.plugin.quality",
				"net.twisterrob.gradle.plugin.settings"
			],
			"matchPaths": [
				"docs/examples/release/**",
				"docs/examples/snapshot/**",
				"docs/examples/local/**"
			],
			"enabled": false
		},
		{
			"description": "Disable updating AGP in debug projects, they have a specific version. Allow patches.",
			"matchPackageNames": [
				"com.android.tools.build:gradle",
				"com.android.application"
			],
			"matchPaths": [
				"docs/debug/agp*-gradle*/build.gradle",
				"docs/debug/agp*-gradle*/build.gradle.kts",
				"docs/debug/agp*-gradle*/settings.gradle",
				"docs/debug/agp*-gradle*/settings.gradle.kts",
				"docs/debug/agp*-gradle*/buildSrc/build.gradle",
				"docs/debug/agp*-gradle*/buildSrc/build.gradle.kts",
				"docs/debug/agp*-gradle*/buildSrc/settings.gradle",
				"docs/debug/agp*-gradle*/buildSrc/settings.gradle.kts"
			],
			"matchUpdateTypes": ["major", "minor"],
			"enabled": false
		},
		{
			"description": "Disable updating Gradle in debug projects, they have a specific version. Allow patches.",
			"matchPackageNames": [
				"gradle"
			],
			"matchPaths": [
				"docs/debug/agp*-gradle*/gradle/wrapper/gradle-wrapper.properties"
			],
			"matchUpdateTypes": ["major", "minor"],
			"enabled": false
		}
	],
	"regexManagers": [
		{
			"description": "Update AGP compatibility CI matrix values and artifact names.",
			"fileMatch": ["^\\.github/workflows/CI\\.yml$"],
			"datasourceTemplate": "maven",
			"registryUrlTemplate": "https://maven.google.com",
			"depNameTemplate": "com.android.tools.build:gradle",
			"matchStrings": [
				"  agp: '(?<currentValue>.*)'",
				"AGP (?:.*) on Gradle (?:.*)(?: - plugin)? \\((?<currentValue>.*) on (?:.*)\\) Test Results (?:XMLs|HTMLs|HTML)"
			],
			"versioningTemplate": "gradle"
		},
		{
			"description": "Update AGP version test.",
			"fileMatch": ["^compat/agp-base/src/test/kotlin/net/twisterrob/gradle/common/AGPVersionsTest\\.kt$"],
			"datasourceTemplate": "maven",
			"registryUrlTemplate": "https://maven.google.com",
			"depNameTemplate": "com.android.tools.build:gradle",
			"matchStrings": [
				"val expected = AGPVersion\\.parse\\(\"(?<currentValue>.*)\"\\)"
			],
			"versioningTemplate": "gradle"
		},
		{
			"description": "Update AGP defaults for local runs.",
			"fileMatch": ["^gradle\\.properties$"],
			"datasourceTemplate": "maven",
			"registryUrlTemplate": "https://maven.google.com",
			"depNameTemplate": "com.android.tools.build:gradle",
			"matchStrings": [
				"net.twisterrob.test.android.pluginVersion=(?<currentValue>.*)"
			],
			"versioningTemplate": "gradle"
		},
		{
			"description": "Update Gradle compatibility CI matrix values and artifact names.",
			"fileMatch": ["^\\.github/workflows/CI\\.yml$"],
			"datasourceTemplate": "gradle-version",
			"depNameTemplate": "gradle",
			"matchStrings": [
				"  gradle: '(?<currentValue>.*)'",
				"AGP (?:.*) on Gradle (?:.*)(?: - plugin)? \\((?:.*) on (?<currentValue>.*)\\) Test Results (?:XMLs|HTMLs|HTML)"
			],
			"versioningTemplate": "gradle"
		},
		{
			"description": "Update Gradle defaults for local runs.",
			"fileMatch": ["^gradle\\.properties$"],
			"datasourceTemplate": "gradle-version",
			"depNameTemplate": "gradle",
			"matchStrings": [
				"net.twisterrob.gradle.runner.gradleVersion=(?<currentValue>.*)"
			],
			"versioningTemplate": "gradle"
		},
		{
			"description": "Update Gradle nagging constants.",
			"fileMatch": [ "^test/src/main/resources/net/twisterrob/gradle/test/nagging\\.init\\.gradle\\.kts$" ],
			"datasourceTemplate": "gradle-version",
			"depNameTemplate": "gradle",
			"matchStrings": [
				"\"(?<currentValue>\\d+(?:\\.\\d+)+(?:-rc-\\d+)?)\","
			],
			"versioningTemplate": "gradle"
		},
		{
			"description": "Update Gradle nagging constants - Kotlin.",
			"fileMatch": [ "^plugin/base/src/testFixtures/resources/net/twisterrob/gradle/test/kotlin-plugin_app/build\\.gradle$" ],
			"datasourceTemplate": "gradle-version",
			"depNameTemplate": "gradle",
			"matchStrings": [
				"\"(?<currentValue>\\d+(?:\\.\\d+)+(?:-rc-\\d+)?)\","
			],
			"versioningTemplate": "gradle"
		},
		{
			"description": "Update Gradle latest tests.",
			"fileMatch": ["^quality/src/test/kotlin/net/twisterrob/gradle/quality/tasks/VersionsTaskTest\\.kt$"],
			"datasourceTemplate": "gradle-version",
			"depNameTemplate": "gradle",
			"matchStrings": [
				"gradle\\.gradleVersion = GradleVersion\\.version\\(\"(?<currentValue>.*)\"\\)",
				"result\\.assertHasOutputLine\\(\"\"\"Gradle version: (?<currentValue>.*)\"\"\"\\)"
			],
			"versioningTemplate": "gradle"
		},
		{
			"description": "Update Gradle latest compatibility.",
			"fileMatch": ["^README\\.md$"],
			"datasourceTemplate": "gradle-version",
			"depNameTemplate": "gradle",
			"matchStrings": [
				"on Gradle .* â€” (?<currentValue>.*) where compatible."
			],
			"versioningTemplate": "gradle"
		}
	]
}
